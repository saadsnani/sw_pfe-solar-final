# Configuration pour la Température de Batterie
# Copiez ce fichier en .env.local et modifiez les valeurs

# ========== BATTERIE TEMPERATURE ==========

# Clé API pour l'authentification (optionnel)
BATTERY_SENSOR_API_KEY=your-secret-key-here

# Intervalle de rafraîchissement (ms)
NEXT_PUBLIC_BATTERY_TEMP_REFRESH_INTERVAL=3000

# URL de base pour l'API (en production)
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000

# Email pour les alertes (optionnel)
BATTERY_ALERT_EMAIL=your-email@example.com

# Seuil d'alerte température (°C)
BATTERY_TEMP_ALERT_THRESHOLD=60

# ========== OPTIONS AVANCEES ==========

# Activer les logs debug
DEBUG_BATTERY_TEMP=false

# Nombre maximum de lectures à conserver
BATTERY_TEMP_MAX_READINGS=500

# Format de date
NEXT_PUBLIC_DATE_FORMAT=fr-FR

# ========== ARDUINO CONFIGURATION ==========

# IP de l'ESP32 (pour accès direct - optionnel)
ESP32_IP=192.168.x.x
ESP32_PORT=80

# WiFi SSID de l'ESP32 (information seulement)
ESP32_SSID=Smiya_Dyal_Wifi

# ========== NOTIFICATIONS ==========

# Activer les alertes
ENABLE_BATTERY_ALERTS=true

# Webhook pour les alertes (Discord, Slack, etc.)
ALERT_WEBHOOK_URL=

# Fréquence d'alerte (ms entre chaque alerte)
ALERT_COOLDOWN_TIME=300000

# ========== MAINTENANCE ==========

# Nettoyer les données plus anciennes que (jours)
BATTERY_DATA_RETENTION_DAYS=30

# Purger les fichiers JSON chaque N jours
BATTERY_CLEANUP_INTERVAL_DAYS=7
